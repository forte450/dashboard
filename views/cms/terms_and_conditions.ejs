                <%- include('../common/navebar')%>

                    <%- include('../common/sidebar')%>


                        <!-- Main Content -->
                        <div class="main-content">
                            <section class="section">
                                <div class="section-header">
                                    <h1>Terms And Conditions</h1>
                                    <div class="section-header-breadcrumb">
                                        <div class="breadcrumb-item active"><a href="/dashboard">Dashboard</a></div>
                                        <!-- <div class="breadcrumb-item"><a href="#">Forms</a></div> -->
                                        <!-- <div class="breadcrumb-item">Advanced Forms</div> -->
                                    </div>
                                </div>

                                <div class="section-body">

                                    <div class="row">
                                        <div class="col-lg-12 col-lg-6 col-lg-6">
                                            <div class="card">
                                                <form class="form-horizontal form-validate-jquery" method="post" action="/post_terms_and_conditions/<%= find_terms.id%>"">

                                                    <div class="card-body">

                                                        <div class="row form-group-cms">
                                                            <label class="control-label col-lg-12">Title:<span class="text-danger"></span></label>
                                                            <div class="col-lg-12" style="float: right;">
                                                                <input type="text" name="title" value="<%- find_terms.title %>" class="form-control" required="required">
                                                            </div>
                                                        </div>

                                                        <div class="row form-group">
                                                            <label class="control-label col-lg-12 float-left">Description:<span class="text-danger"></span></label>


                                                            <div class="col-lg-12 float-left">

                                                                <textarea style="height:250px !important" id="chktext" name="description" class="form-control" id="description" pattern="^\S+$" required><%= find_terms.description%></textarea>

                                                            </div>
                                                        </div>
                                                        <div class="form-group mb-0">
                                                            <div class="input-group">
                                                                <button type="submit" class="btn btn-primary ml-auto mt-4 mr-3"> Update</button>
                                                            </div>
                                                        </div>


                                                    </div>
                                            </div>



                                        </div>

                                    </div>
                                </div>




                                <!-- Minimum characters -->



                                </fieldset>

                                </form>
                        </div>
                        </section>
            </div>
            <%- include('../common/footer')%>


        <!-- General JS Scripts -->

    </body>
    <script>
        CKEDITOR.replace('description');
        const editor = CKEDITOR.replace('chktext');

// Add a listener to the editor instance
editor.on('blur', function(event) {
  validateEditor();
});

function validateEditor() {
  const value = editor.getData().trim();
  const containsNonWhitespace = value.replace(/\s/g, '').length > 0;

  if (!containsNonWhitespace) {
    editor.setCustomValidity('Please enter a valid description.');
  } else {
    editor.setCustomValidity('');
  }
}
        
</script>



